{
    "hosting": {
        "public": "public",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "**/front",
                "destination": "/front.html"
            },
            {
                "source": "**/",
                "destination": "/front.html"
            },
            {
                "source": "!/@(js|css)/**",
                "destination": "/fridge.html"
            }
        ],
        "clearUrls": true
    }
}
