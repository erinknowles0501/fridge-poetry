{
    "hosting": {
        "public": "public",
        "ignore": ["firebase.json", "**/.*"],
        "rewrites": [
            {
                "source": "**/",
                "destination": "/front.html"
            },
            {
                "source": "**/!(*.js|*.css)",
                "destination": "/fridge.html"
            }
        ],
        "clearUrls": true
    },
    "firestore": {
        "rules": ".firebase/firestore.rules"
    }
}
