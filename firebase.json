{
    "hosting": {
        "public": "public",
        "ignore": ["firebase.json", "**/.*"],
        "rewrites": [
            {
                "source": "**/",
                "destination": "/front.html"
            },
            {
                "source": "**/!(*.js|*.css)",
                "destination": "/fridge.html"
            }
        ],
        "clearUrls": true
    },
    "firestore": {},
    "emulators": {
        "firestore": {
            "host": "localhost",
            "port": 8081
        }
    }
}
